{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "ES2022",
    "module": "commonjs",
    "moduleResolution": "Node",
    "lib": ["DOM", "ES2022", "DOM.Iterable"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "experimentalDecorators": true
  },
  "exclude": ["node_modules"],
  "ts-node": {
    "files": true
  }
}
